%header.header_main.header_home
  .ds_wrapper.wrapper_top
    .container
      .row
        %span.toogle_span
          Контактная информация
        .notification_bar
          -if General.first
            .col-sm-9.col-lg-9.padd_l
              .ds_top_notification
                .br_notification_content
                  %i.fa.fa-mobile
                  .notification_text
                    ="Позвоните нам для записи - #{General.first.phone}"
                  / 1103cf
                .br_notification_content
                  %i.fa.fa-map-marker
                  .notification_text
                    =General.first.address
                .br_notification_content
                  %i.fa.fa-send
                  .notification_text
                    =link_to "mailto:#{General.first.email}" do
                      =General.first.email
            .col-sm-3.col-lg-3.padd_r
              .ds_social_notification
                =link_to General.first.vk do
                  %i.fa.fa-vk
                =link_to General.first.fb do
                  %i.fa.fa-facebook-official
                =link_to General.first.instagram do
                  %i.fa.fa-instagram
          -else
            Нет настроек
  / header top section
  / header menu section start
  .ds_wrapper.wrapper_nav
    .container
      .row
        / navbar toggle start
        .navbar-header.pull-right
          %button.navbar_toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
            %i.fa.fa-list-ul
        / navbar toggle end
        .col-sm-2.col-lg-2.col-md-2.col-xs-5
          -if General.first
            .ds_logo_left
              =link_to root_path do
                -unless General.first.logo.url(:xsmall).nil?
                  =image_tag General.first.logo.xsmall.url
                -else
                  Нет изображения
          -else
            Нет настроек
        .col-sm-12.col-lg-8.col-md-8.col-xs-12.ds_navigation_menu
          / navbar_collapse
          .navbar_collapse
            %nav
              %ul.menu
                %li.current_page_item
                  =link_to 'Главная', root_path, method: :get
                %li
                  =link_to 'Стилисты', team_path, method: :get
                %li
                  =link_to 'Услуги', '#'
                  %ul.sub-menu
                    %li
                      =link_to "Важная информация", important_path, method: :get
                    %li
                      =link_to "Примеры работ", examples_path, method: :get
                    %li
                      =link_to "Наши цены", services_path, method: :get
                %li
                  =link_to 'Контакты', contact_path, method: :get
                %li
                  =link_to 'Жизнь студии', '#'
                  %ul.sub-menu
                    %li
                      =link_to 'События', posts_path, method: :get
                    %li
                      =link_to 'Обучение', courses_path, method: :get
                    %li
                      =link_to 'Сертификаты', documents_path, method: :get

          / navbar_collapse
        #appointment_btn.pull-right.hidden-xs
          .appointment_btn
            =link_to 'Записаться к мастеру', new_request_path, method: :get
              
  / header menu section end
/ header menu section end
