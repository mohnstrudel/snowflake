=form_for [:admin, @static_page] do |f|
  .panel.mb25.mt5
    .panel-heading
      %span.panel-title.hidden-xs Добавить новую статичную страницу
      %ul.nav.panel-tabs-border.panel-tabs
        %li.active
          %a{"data-toggle" => "tab", :href => "#tab1_1"} Параметры статичной страницы
    .panel-body.p20.pb10
      .tab-content.pn.br-n.admin-form
        .section.row.mbn
          .col-md-12.pl15
            .section.row
              %label.field.prepend-field
                =f.select(:sp_category, Snowflake::Application.config.sp_categories, {include_blank: true}, {class: 'select2-single form-control select-info select-static-pages-category'})
                / =f.collection_select(:sp_category, Snowflake::Application.config.sp_categories, {include_blank: false, :include_hidden => false, :selected => @static_page.sp_category}, { class: 'select2-single form-control select-info select-masters-category'})
                  
            .section.row
              %label.field.prepend-icon{:for => "daterangepicker1"} 
                =f.text_field :title, class: "form-control pull-right", placeholder: 'Заголовок страницы'
                %label.field-icon{:for => "product-price"}
                  %i.fa.fa-user

            .section.row
              %label.field.prepend-icon{:for => "product-price"}
                =f.text_area :body, placeholder: "Содержание страницы", class: "gui-input", style: "height: 160px;"
                %label.field-icon{:for => "product-price"}
                  %i.fa.fa-user


        %hr.short.alt
          .section.row.mbn
            .col-sm-8
              / %label.field.option.mt10
              /   %input{:checked => "", :name => "info", :type => "checkbox"}
              /     %span.checkbox>
              /     Save Customer
              /     %em.small-text.text-muted - A Random Unique ID will be generated
            .col-sm-4
              %p.text-right
                =f.submit "Сохранить", class: "btn btn-primary"
          / end section